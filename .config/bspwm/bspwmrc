bspc config borderless_monocle   true
bspc config gapless_monocle      true

#reglas de lanzamiento para algunas apps

bspc rule -a "pwvucontrol" state=floating rectangle=900x500+0+48
feh --bg-fill $HOME/Im√°genes/lofi/wallpaper.jpg & disown
nm-applet & disown
